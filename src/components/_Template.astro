---
import { cn } from "@/utils/styles"

type Props = {
  className?: string
}

const { className, ...props } = Astro.props

const wrapperClassnames = cn([
  "flex",
  "flex-col",
  "items-center",
  "justify-center",
  "w-full",
  "max-w-2xl",
  "mx-auto",
  "px-4",
  "py-8",
  "space-y-8",
  className,
  //
])
---

<div class={wrapperClassnames} {...props}>
  <slot />
</div>
